{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/backend/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      }
    },
    "dev": {
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "backend:build",
        "runBuildTargetDependencies": false
      },
      "configurations": {
        "development": {
          "buildTarget": "backend:build:development"
        },
        "production": {
          "buildTarget": "backend:build:production"
        }
      }
    },
    "test": {
      "options": {
        "passWithNoTests": true
      }
    },
    "seed": {
      "executor": "nx:run-commands",
      "options": {
        "command": "ts-node --transpile-only prisma/seed.ts",
        "cwd": "apps/backend"
      }
    },
    "prisma:generate": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma generate --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    },
    "prisma:migrate:create": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma migrate dev --create-only --name {args.name} --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    },
    "prisma:migrate:dev": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma migrate dev --name {args.name} --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    },
    "prisma:migrate:deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma migrate deploy --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    },
    "prisma:migrate:reset": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma migrate reset --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    },
    "prisma:db:push": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "npx prisma db push --schema=apps/backend/prisma/schema.prisma"
        ]
      }
    }
  }
}
